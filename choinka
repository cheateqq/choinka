#include <iostream>

using namespace std;

int main()
{
    int wys=0;
    cout<<"wprowadz wysokosc ";
    cin>>wys;
    
    for(int i=0;i<wys;i++){
        for(int j=0;j<=i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
}
